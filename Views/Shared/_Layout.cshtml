<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - CyComputer</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <!-- Google Material Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    @await RenderSectionAsync("Estilos", required: false)
</head>
<body>
    <div class="wrapper">
        <div class="body-overlay"></div>
        <!------- Sidebar Design ----------->
        <div id="sidebar">
            <div class="sidebar-header">
                <h3><img src="~/img/logo.png" class="img-fluid" /><span>C&C Computer</span></h3>
            </div>
            <ul class="list-unstyled component m-0">
                <li class="">
                    <a href="@Url.Action("Index", "Home")" class="dashboard"><i class="material-icons">dashboard</i>Inicio</a>
                </li>
                <li class="dropdown">
                    <a href="#homeSubmenu1" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="material-icons">aspect_ratio</i>Compras
                    </a>
                    <ul class="collapse list-unstyled menu" id="homeSubmenu1">
                        <li><a href="#">Historial</a></li>
                        <li><a href="@Url.Action("Index", "Compra")">Pedidos de Compra</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#homeSubmenu2" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="material-icons">apps</i>Ventas
                    </a>
                    <ul class="collapse list-unstyled menu" id="homeSubmenu2">
                        <li><a href="@Url.Action("Index", "Productos")">Productos</a></li>
                        <li><a href="@Url.Action("Index", "GuiaSalida")">Guia de Salida</a></li>
                        <!-- Nueva opción para Devoluciones -->
                        <li><a href="@Url.Action("Index", "Devoluciones")">Devoluciones</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#homeSubmenu3" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="material-icons">equalizer</i>Almacen
                    </a>
                    <ul class="collapse list-unstyled menu" id="homeSubmenu3">
                        <li><a href="@Url.Action("Index", "GuiaEntrada")">Guia de Entrada</a></li>
                        <li><a href="@Url.Action("Index", "Pedidos")">Productos Faltantes</a></li>
                    </ul>
                </li>

                <li class="dropdown">
                    <a href="#homeSubmenu4" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="material-icons">extension</i>Dashboard
                    </a>
                    <ul class="collapse list-unstyled menu" id="homeSubmenu4">
                        <li><a href="@Url.Action("Index", "Dashboard")">Almacen</a></li>
                        <li><a href="@Url.Action("Index", "Ventas")">Ventas</a></li>
                        <li><a href="@Url.Action("Index", "Compras")">Compras</a></li>
                    </ul>
                </li>


                <li class="">
                    <a href="@Url.Action("Index", "Clientes")" class="dashboard"><i class="material-icons">people</i>Clientes</a>
                </li>
                <li class="">
                    <a href="@Url.Action("Index", "Empleados")" class="dashboard"><i class="material-icons">person</i>Usuarios</a>
                </li>
                <li class="">
                    <a href="@Url.Action("Index", "Proveedores")" class="dashboard"><i class="material-icons">people</i>Proveedores</a>
                </li>
                <li class="">
                    <a href="/Inicio/CustomerIndex" class="dashboard"><i class="material-icons">people</i>Vista Clientes</a>
                </li>
                <li class="">
                    <a href="@Url.Action("Index", "Backup")" class="dashboard"><i class="material-icons">backup</i>Crear Backup</a>
                </li>
            </ul>
        </div>
        <!------- Sidebar Design Close ----------->
        <!------- Page Content Start ----------->
        <div id="content">
            <!------ Top Navbar Start ----------->
            <div class="top-navbar">
                <div class="xd-topbar">
                    <div class="row">
                        <div class="col-2 col-md-1 col-lg-1 order-2 order-md-1 align-self-center">
                            <div class="xp-menubar">
                                <span class="material-icons text-white">signal_cellular_alt</span>
                            </div>
                        </div>
                        <div class="col-md-5 col-lg-3 order-3 order-md-2">
                            <div class="xp-searchbar">
                                <form>
                                    <div class="input-group">
                                        <!-- <input type="search" class="form-control" placeholder="Buscar Producto"> -->
                                        <div class="input-group-append">
                                            <!-- <button class="btn" type="submit" id="button-addon2"> -->
                                            <!-- </button> -->
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-10 col-md-6 col-lg-8 order-1 order-md-3">
                            <div class="xp-profilebar text-right">
                                <nav class="navbar p-0">
                                    <ul class="nav navbar-nav flex-row ml-auto">
                                        <li class="dropdown nav-item">
                                            <a class="nav-link" href="#" data-toggle="dropdown">
                                                <img src="~/img/user.png" style="width:40px; border-radius:50%;" />
                                                <span class="xp-user-live"></span>
                                            </a>
                                            <ul class="dropdown-menu small-menu">
                                                <li>
                                                    <a href="#">
                                                        <span class="material-icons">person_outline</span>Perfil
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="#">
                                                        <span class="material-icons">settings</span>Configuracion
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="@Url.Action("Index", "Login")">
                                                        <span class="material-icons">logout</span>Cerrar Sesión
                                                    </a>
                                                </li>
                                            </ul>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!------ Top Navbar End ----------->

            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <!------- Page Content End ----------->
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="~/js/jquery-3.3.1.slim.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".xp-menubar").on('click', function () {
                $("#sidebar").toggleClass('active');
                $("#content").toggleClass('active');
            });
            $('.xp-menubar,.body-overlay').on('click', function () {
                $("#sidebar,.body-overlay").toggleClass('show-nav');
            });
        });
    </script>
    @RenderSection("Scripts", required: false)

    <!-- Footer CYComputer  -->

    <footer class="footer">
        <div class="container-fluid">
            <div class="footer-in">
                <p class="mb-0">&copy; 2024 CyComputer. Todos los derechos reservados.</p>
            </div>
        </div>
    </footer>
</body>
</html>
