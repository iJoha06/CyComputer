@model List<CyComputer.Models.Devolucion>

<h2>Lista de Devoluciones</h2>

<a href="@Url.Action("Create", "Devoluciones")" class="btn btn-primary mb-3">Crear Nueva Devolución</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Motivo</th>
            <th>Tipo</th>
            <th>Fecha</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var devolucion in Model)
        {
            <tr>
                <td>@devolucion.Id</td>
                <td>@devolucion.NombreProducto</td>
                <td>@devolucion.Cantidad</td>
                <td>@devolucion.Motivo</td>
                <td>@devolucion.TipoDevolucion</td>
                <td>@devolucion.Fecha.ToShortDateString()</td>
                <td>
                    <a href="@Url.Action("Edit", "Devoluciones", new { id = devolucion.Id })" class="btn btn-warning btn-sm">Editar</a>
                    <a href="@Url.Action("Delete", "Devoluciones", new { id = devolucion.Id })" class="btn btn-danger btn-sm">Eliminar</a>

                </td>
            </tr>
        }
    </tbody>
</table>
