@model CyComputer.Models.Compra

@{
    ViewData["Title"] = "Eliminar Pedido de Compra";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>

    <h3>¿Estás seguro de que deseas eliminar este pedido?</h3>

    <dl class="row">
        <dt class="col-sm-2">Proveedor</dt>
        <dd class="col-sm-10">@Model.IdProveedorNavigation?.Nombre</dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Fecha?.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">@Model.Total?.ToString("C")</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="IdCompra" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
