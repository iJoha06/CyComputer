@model CyComputer.Models.Compra

@{
    ViewData["Title"] = "Detalles del Pedido de Compra";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>

    <dl class="row">
        <dt class="col-sm-2">Proveedor</dt>
        <dd class="col-sm-10">@Model.IdProveedorNavigation?.Nombre</dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Fecha?.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">@Model.Total?.ToString("C")</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>
    </dl>

    <h3>Productos</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Costo Unitario</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detalle in Model.DetalleCompras)
            {
                <tr>
                    <td>@detalle.IdProductoNavigation?.Nombre</td>
                    <td>@detalle.Cantidad</td>
                    <td>@detalle.CostoUnitario?.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Index" class="btn btn-secondary">Regresar</a>
</div>
